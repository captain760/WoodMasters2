
@model IEnumerable<MasterPieceViewModel>

@{
    ViewBag.Title = "All Masterpieces";
}

<head>
<style>
body  {
  background-image: url("/Images/all-background.jpeg");
  background-color: #cccccc;
}
</style>
</head>
<hr class="border border-warning border-2 opacity-75">

<h2 class="text-center text-white">@ViewBag.Title</h2>
<hr class="border border-warning border-3 opacity-75">


  
  


    <div class="text-center row">
        @foreach (var mp in Model)
        {
            <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@mp.ImageURL" alt="Masterpiece Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@mp.Name</h5>
                <p class="mb-1">Category: @mp.Category</p>
                <p class="mb-1">Master: @mp.Master</p>
                <p class="mb-1">Width/Length/Depth[cm]: @mp.Width/@mp.Length/@mp.Depth</p>                
                <p class="mb-1">Description: @mp.Description</p>
                <p class="mb-0">Price: @mp.Price $</p>
                <p class="mb-1">Quantity: @mp.Quantity pcs.</p>
                <p class="mb-0">Rating: @mp.Rating</p>
                
            </div>
            @if (User?.Identity?.Name!= mp.Master)
            {
                
                <form class="input-group-sm" asp-controller="MasterPiece" asp-action="AddToFavorites" asp-route-masterPieceId="@mp.Id">
                    <input type="submit" value="Add to Favorites" class="fs-6 btn btn-warning mb-3 p-2" />
                </form>
                                   
            }
            <form class="input-group-sm" asp-controller="Comment" asp-action="AllComments" asp-route-masterPieceId="@mp.Id">
                    <input type="button" value="Comments" class="fs-6 btn btn-secondary mb-3 p-2" />
                </form>            
            
        </div>
        }
    </div>
    

