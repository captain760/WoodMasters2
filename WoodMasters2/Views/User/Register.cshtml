@using WoodMasters2.Core.Models.User
@model RegisterViewModel
@{
    ViewData["Title"] = "Register Yourself";
}

<head>
<style>
body  {
  background-image: url("/Images/home-bg.jpg");
  background-color: #cccccc;
}
</style>
</head>
<hr class="border border-primary border-2 opacity-75">

<h2 class="text-left text-primary">@ViewBag.Title</h2>
<hr class="border border-primary border-3 opacity-75">
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-left mb-3">
                <label asp-for="@Model.UserName"><b>Username</b></label>
                <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.FirstName"><b>First Name</b></label>
                <input class="form-control " autocomplete="First Name" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.LastName"><b>Last Name</b></label>
                <input class="form-control " autocomplete="Last Name" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.Email"><b>Email</b></label>
                <input class="form-control " autocomplete="Email" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.PhoneNumber"><b>Phone Number</b></label>
                <input class="form-control " autocomplete="PhoneNumber" aria-required="true" asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.PlaceName"><b>Place Name</b></label>
                <input class="form-control " autocomplete="Place Name" aria-required="true" asp-for="@Model.PlaceName" />
                <span asp-validation-for="@Model.PlaceName" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.Country"><b>Country</b></label>
                <input class="form-control " autocomplete="Country" aria-required="true" asp-for="@Model.Country" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.Password"><b>Password</b></label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-left mb-3">
                <label asp-for="@Model.ConfirmPassword"><b>Confirm Password</b></label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="float-right">
                <button id="registerSubmit" type="submit" class="btn float-end btn-primary"><b>Register</b></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
