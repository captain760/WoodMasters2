@using WoodMasters2.Core.Models.User
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}
<head>
<style>
body  {
  background-image: url("/Images/home-bg.jpg");
  background-color: #ffffff;
}
</style>
</head>
<hr class="border col-md-4 border-primary border-2 opacity-75">
<h2 class="text-left text-primary">@ViewBag.Title</h2>
<hr class="border col-md-4 border-primary border-3 opacity-75">
<div class="row">
    <div class="col-md-4 offset-md-0">
        <section>
            <form id="account" method="post">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-left mb-3">
                    <label asp-for="@Model.UserName" class="form-label"><b>UserName:</b></label>
                    <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="text-left mb-3">
                    <label asp-for="@Model.Password" class="form-label"><b>Password:</b></label>
                    <input asp-for="@Model.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="float-right">
                    <button id="login-submit" type="submit" class="btn float-end btn-primary"><b>Log in</b></button>
                </div>
            </form>
        </section>
    </div>
</div>
