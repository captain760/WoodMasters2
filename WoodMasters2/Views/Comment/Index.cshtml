@model List<CommentViewModel>

@{
    ViewBag.Title = "All Comments";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Comment" asp-action="Add" class="btn btn-primary">Add Comment</a>
</div>


@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var comment in Model)
        {
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title mt-1 text-center">@comment.MasterPiece.Name</h4>

                        
        
                <p class="mb-1">Category: @comment.MasterPiece.Category</p>
                <p class="mb-1">Master: @comment.MasterPiece.Master</p>
                <p class="mb-1">Width/Length/Depth[cm]: @comment.MasterPiece.Width/@comment.MasterPiece.Length/@comment.MasterPiece.Depth</p>                
                <p class="mb-1">Description: @comment.MasterPiece.Description</p>
                <p class="mb-0">Price: @comment.MasterPiece.Price $</p>
                <p class="mb-1">Quantity: @comment.MasterPiece.Quantity pcs.</p>
                <p class="mb-0">Rating: @comment.MasterPiece.Rating</p>
        @foreach (var cmp in comment.Comments)
        {        
            <div class="card-body">

                <h5 class="card-title mt-1">@cmp.MasterPiece?.Master.UserName</h5>
                <p class="mb-0">Comment: @cmp.Body</p>
                <p class="mb-0">Posted on: @cmp.PostingTime</p>
                
            </div>                    
        }
        @*@if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="d-grid gap-2">
                                
                                <form class="mt-2" asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">
                                    <div class="d-grid gap-2">
                                        <input type="submit" value="Delete" class="btn btn-danger mb-2"
                                        onclick="return confirm('Are you sure you want to delete the post: @post.Title')"/>
                                    </div>
                                </form>
                            </div>
                        }*@
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No posts yet!</p>
}
